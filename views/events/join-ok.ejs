<h2 class="form-title title-eve">¡Enhorabuena! No olvides tus zapas ;)</h2>

<div class="rela-block container container-eve">
  <div class="rela-block event-card">
    <div id="profile_pic">

      <img src="/uploads/<%= join.eventId.imgUrl %>" width="150" height="150">
      <div class="rela-block profile-name-container">
        <div class="rela-block user-name">
          <h3><%= join.eventId.eventName %></h3></div>
        <div class="rela-block user-desc">
          <p>
            <%= join.eventId.date %>
          </p>
        </div>
      </div>
      <div class="rela-block profile-name-container">
        <div class="rela-block user-desc">
          <p>Descripción:
            <%= join.eventId.description %>
          </p>
        </div>
        <% if (user._id.equals(join.eventId.creator._id)) {%>
          <a href="/events/<%= join.eventId._id %>/edit/">Edit Event</a>
          <form action="/events/<%= join.eventId._id %>/delete" method="POST">
            <button type="submit">Borrar Evento</button>
          </form>
          <% } %>

            <div id="map" class="mapa-detalle"></div>

            <h2 class="form-title title-eve">Participantes de Evento</h2>
            <p><%= join.userId.name %></p>

            <form action='/events/join/myevent/<%= join._id %>/delete' method="POST">
              <button type="submit">Baja del evento :(</button>
            </form>
      </div>
    </div>
  </div>
</div>


